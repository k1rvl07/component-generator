{{else}}
{{#if_eq folderStructure "Grouped"}}
import styles from './styles/{{name}}.module.{{toLowerCase style}}';
{{else}}
import styles from './{{name}}.module.{{toLowerCase style}}';
{{/if_eq}}
{{/if_eq}}
