{{#if hooks}}
import { use{{name}} } from './{{#if_eq folderStructure "Grouped"}}hooks/{{/if_eq}}use{{name}}';
{{/if}}

export class {{name}} extends React.Component {
  constructor(props) {
    super(props);
    this.state = {};
  }

  {{#if hooks}}
  componentDidMount() {
    // Пример использования хука
    const {} = use{{name}}();
  }
  {{/if}}

  render() {
    return (
{{#if_eq style "Styled Components"}}
    <Container>
      {{name}} Component
    </Container>
{{else if_eq style "CSS"}}
    <div className={styles.container}>
      {{name}} Component
    </div>
{{else if_eq style "SCSS"}}
    <div className={styles.container}>
      {{name}} Component
    </div>
{{else}}
    <div>
      {{name}} Component
    </div>
{{/if_eq}}
    );
  }
